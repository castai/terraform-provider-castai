{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PassRoleEC2",
      "Action": "iam:PassRole",
      "Effect": "Allow",
      "Resource": "arn:{{ .Partition }}:iam::*:role/*",
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": "ec2.amazonaws.com"
        }
      }
    },
    {
      "Sid": "PassRoleEKS",
      "Action": "iam:PassRole",
      "Effect": "Allow",
      "Resource": "arn:{{ .Partition }}:iam::*:role/*",
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": "eks.amazonaws.com"
        }
      }
    },
    {
      "Sid": "NonResourcePermissions",
      "Effect": "Allow",
      "Action": [
        "iam:CreateServiceLinkedRole",
        "ec2:CreateKeyPair",
        "ec2:CreateTags",
        "ec2:DeleteKeyPair",
        "ec2:DescribeCapacityReservations",
        "ec2:ImportKeyPair"
      ],
      "Resource": "*"
    },
    {
      "Sid": "RunInstancesPermissions",
      "Effect": "Allow",
      "Action": "ec2:RunInstances",
      "Resource": [
        "arn:{{ .Partition }}:ec2:*:{{ .AccountNumber }}:capacity-reservation/*",
        "arn:{{ .Partition }}:ec2:*:{{ .AccountNumber }}:key-pair/*",
        "arn:{{ .Partition }}:ec2:*:{{ .AccountNumber }}:network-interface/*",
        "arn:{{ .Partition }}:ec2:*:{{ .AccountNumber }}:security-group/*",
        "arn:{{ .Partition }}:ec2:*:{{ .AccountNumber }}:volume/*",
        "arn:{{ .Partition }}:ec2:*::image/*"
      ]
    }
  ]
}
